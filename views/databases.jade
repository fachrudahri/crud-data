extends layout

block content
  .h-index.text-center
    h1= title
  .register.text-center
    a(href="/register") Create
  .tableku
    table(border='1', cellspacing='0', cellpadding='5')
        thead
            th CODE
            th NAME
            th DEPARTEMENT
            th AGE
            th Action
        tbody
            each a in students
              tr
                td #{a.code}
                td #{a.name}
                td #{a.departement}
                td #{a.age}
                td #[a.detail(href='/detail/'+a.code) Detail]  #[a.edit(href='/update/'+a.code) Edit]  #[a.delete(href='/delete/'+a.code) Delete]